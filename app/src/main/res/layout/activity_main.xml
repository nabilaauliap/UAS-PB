<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ndroid_obile__1"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Selamat Data"
        android:textColor="#FF000000"
        android:textSize="28sp" />

    <Button
        android:id="@+id/newlist"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="500dp"
        android:textColor="#8b3a3a"
        android:backgroundTint="#ffff"
        android:onClick="newslist"
        android:text="Berita mengenai kesehatan" />

    <Button
        android:id="@+id/galery"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="500dp"
        android:textColor="#8b3a3a"
        android:backgroundTint="#ffff"
        android:onClick="galery"
        android:text="Ruangan di Puskesmas" />

    <Button
        android:id="@+id/aboutus"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="550dp"
        android:textColor="#8b3a3a"
        android:backgroundTint="#ffff"
        android:onClick="aboutus"
        android:text="About Us" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="550dp"
        android:textColor="#8b3a3a"
        android:backgroundTint="#ffff"
        android:onClick="feed"
        android:text="Contact Us" />



</RelativeLayout>